@page "{id:int}"
@model RockMove.Pages.DeleteArtistModel
@{
    ViewData["Title"] = "Delete Artist";
}

<h1>Delete Artist</h1>

<h3>Are you sure you want to delete this artist?</h3>
<div>
    <h4>Artist</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name
        </dt>
        <dd class="col-sm-10">
            @Model.Artist.Name
        </dd>
        <dt class="col-sm-2">
            Genre
        </dt>
        <dd class="col-sm-10">
            @Model.Artist.Genre
        </dd>
        <dt class="col-sm-2">
            Period
        </dt>
        <dd class="col-sm-10">
            @Model.Artist.Period
        </dd>
        <dt class="col-sm-2">
            Description
        </dt>
        <dd class="col-sm-10">
            @Model.Artist.Description
        </dd>
    </dl>

    <form method="post">
        <input type="hidden" asp-for="Artist.Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-page="./Artist" class="btn btn-secondary">Cancel</a>
    </form>
</div>
