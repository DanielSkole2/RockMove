@page "{id:int}"
@model RockMove.Pages.EditArtistModel
@{
    ViewData["Title"] = "Edit Artist";
}

<h1>Edit Artist</h1>

<form method="post">
    <input type="hidden" asp-for="Artist.Id" />
    <div class="form-group">
        <label asp-for="Artist.Name"></label>
        <input asp-for="Artist.Name" class="form-control" />
        <span asp-validation-for="Artist.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Artist.Genre"></label>
        <input asp-for="Artist.Genre" class="form-control" />
        <span asp-validation-for="Artist.Genre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Artist.Period"></label>
        <input asp-for="Artist.Period" class="form-control" />
        <span asp-validation-for="Artist.Period" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Artist.Description"></label>
        <input asp-for="Artist.Description" class="form-control" />
        <span asp-validation-for="Artist.Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-page="./Artist" class="btn btn-secondary">Cancel</a>
</form>
